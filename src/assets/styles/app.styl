@import 'rupture'

@import 'reset'
@import 'typography'
@import 'colors'

.IIV::-webkit-media-controls-play-button,
.IIV::-webkit-media-controls-start-playback-button
	opacity: 0
	pointer-events: none
	width: 5px
	
@keyframes marquee-left
	0%
		transform: translateX(25%)
	100%
		transform: translateX(-25%)
	
@keyframes marquee-right
	0%
		transform: translateX(-25%)
	100%
		transform: translateX(25%)
		
@keyframes marquee
	0%
		transform: translateX(0)
	100%
		transform: translateX(-100%)

body, html
	width: 100%
	background: darkgrey
	font-weight: 300
	color: white
	font-size: 18px
	font-family: UniversBold
	line-height: 1.35
	
	&.no-scroll
		overflow: hidden
		height: 100vh

section
	width: 100%
	height: 100vh
	position: relative

.menu-top
	position: fixed
	top: 2rem
	left: 10%
	display: flex
	justify-content: flex-end
	align-items: center
	width: 80%
	z-index: 500
	padding-top: 1rem
	opacity: 0
	
	.logos
		height: 10vh
		display: flex
		justify-content: center
		align-items: flex-start
		
		img
			height: 100%

			& + img
				margin-left: 30%
			
.menu-bottom
	position: fixed
	bottom: 1rem
	left: 10%
	display: flex
	justify-content: space-between
	align-items: flex-end
	width: 80%
	z-index: 500
	padding: 1rem
	opacity: 0

	a
		text-decoration: none
		color: white
		font-size: 1rem
		text-transform: uppercase
		letter-spacing: 0.1em

		svg
			display: inline-block
			width: 1.2rem
		
		&.scroll
			display: flex
			flex-direction: column
			justify-content: center
			align-items: center
			
			svg
				display: block
				padding-bottom: 0.5em
				width: 0.8rem

#smoke-screen
	position: fixed
	top: 0
	left: 0
	width: 100%
	height: 100%
	z-index: 130
	background: darkgrey

.logo-wrapper
	width: 80%
	left: 10%
	position: fixed
	z-index: 500
	top: 40%

	svg
		width: 100%
		min-width: 8rem

#intro
	background: black

	.video-wrapper
		position: absolute
		top: 0
		left: 0
		height: 100%
		width: 100%
		overflow: hidden
		
	#intro-video
		position: absolute
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)
		min-height: 100%
		min-width: 100%
		width: auto
		height: auto
	
	#progress-wrapper
		position: absolute
		z-index: 100
		top: 0
		left: 0
		width: 100%
		height: 100%
		display: flex
		justify-content: center
		align-items: center
		flex-direction: column
		padding-top: 10%
		
		#cta-wrapper
			display: flex
			flex-direction: column
			justify-content: center
			align-items: center
			width: 40%
			
			+below(800px)
				width: 75%

			svg
				width: 100%
				margin-bottom: 5%
		
			#progress-bar
				height: 1.25rem
				width: 85%
				border: 3px solid white
				position: relative
				
				#progress-indicator
					position: absolute
					left: 0
					top: 0
					width: 100%
					height: 100%
					overflow: hidden
					z-index: 1
					
					#progress
						position: absolute
						left: 0
						top: 0
						width: 0%
						height: 100%
						background: white
			
			#cta
				margin-top: 0.5rem
				font-size: 1rem
				letter-spacing: 0.1em
				text-transform: uppercase
				padding-bottom: 1.8%
				width: 85%
				display: flex
				justify-content: space-between

.centred-image
	position: absolute
	top: 50%
	left: 50%
	transform: translate(-50%, -50%)

.bg-type
	display: flex
	flex-direction: column
	position: absolute
	width: 100%
	left: 0

	.type-band		
		margin: 0.25rem 0
		overflow: hidden
		position: relative
		white-space: nowrap

		.type
			height: 100%
			background-repeat: repeat-x
			background-size: auto 100%
			width: 500%
			left: -250%
			position: absolute
			
		&:nth-child(1)
			.type
				background-position: 20% 0
			
		&:nth-child(2)
			.type
				background-position: 50% 0
		
		&:nth-child(3)
			.type
				background-position: 45% 0
				
		&:nth-child(4)
			.type
				background-position: 55% 0
				
	&.animated
		.type-band
			.type
				animation: marquee-left 30s linear infinite alternate

			&:nth-child(odd)
				.type
					animation: marquee-right 30s linear infinite alternate

#enter-the-archives
	.bg-type
		height: 70%
		top: 20%
		
		.type-band
			height: 25%
	
			.type
				background-image: url('/assets/images/enter-the-archives.svg')
	
