.section-wrap
	position: relative
	height: 900vh
	overflow: hidden
	
	.svg-wrap
		z-index: 100
		top: 0
		left: 0
		display: flex
		
		.image-wrap
			margin: auto
			position: relative
	
			svg
				max-width: 100%
				margin: auto
				
			.strike
				height: 2vmax
				position: absolute
				width: 120%
				left: -10%

	.image-stack
		z-index: 120
		width: 100%
		height: 100vh
		transform: translateY(100%)
		position: fixed
		top: 0
		left: 0
		overflow: hidden
		
		img, video
			width: 30%
			position: absolute
		
#shop-now
	.bg-type
		height: 50%
		top: 20%
		
		.type-band
			height: 50%
	
			.type
				background-image: url('/assets/images/shop-now-combo.svg')

	.ticker
		color: white
		overflow: hidden
		position: absolute
		bottom: 10%
		left: 0
		width: 100%

		.ticker-text
			padding-left: 100%
			width: auto
			white-space: nowrap
			display: inline-block
			font-family: Druk
			font-size: 10vh
			text-transform: uppercase
			
		&.animated
			.ticker-text
				animation: marquee 30s linear infinite
		