#no-trainers-wrap		
	svg
		width: 60%
		
		path
			fill: white
			
	.one
		img
			left: 25%
			top: 8%
			width: 17%
	
	.two
		img
			left: 2%
			top: 0
			width: 20%
			
	.three
		img
			left: 1%
			top: 40%
			width: 20%
			
	.four
		img
			right: 5%
			top: 10%
			width: 22%
	
	.five
		img
			right: 20%
			top: 25%
			width: 18%
	
	.six
		img
			left: 40%
			top: 50%
			width: 20%
	
