.section-wrap
	position: relative
	height: 400vh
	overflow: hidden
	
	.svg-wrap
		z-index: 100
		top: 0
		left: 0
		display: flex
		
		svg
			max-width: 100%
			margin: auto
			
		.strike
			height: 2vw
			position: absolute
			width: 60%
			left: 20%
			top: 53%

	.image-stack
		z-index: 120
		width: 100%
		height: 100vh
		transform: translateY(100%)
		position: fixed
		top: 0
		left: 0
		overflow: hidden
		
		img
			width: 30%
			position: absolute
		
#shop-now
	.bg-type
		height: 50%
		top: 20%
		
		.type-band
			height: 50%
	
			.type
				background: url('/assets/images/shop-now-combo.svg')

	.ticker
		color: white
		overflow: hidden
		position: absolute
		bottom: 10%
		left: 0
		width: 100%

		.ticker-text
			padding-left: 100%
			width: auto
			animation: marquee 30s linear infinite
			white-space: nowrap
			display: inline-block
			font-family: Druk
			font-size: 10vh
			text-transform: uppercase
		